doctype html
html
  head
    title Books
    // Include Tailwind CSS from CDN
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css")
  body
    div(class="min-h-screen flex items-center justify-center bg-gray-200")
      div(class="bg-white p-8 rounded-lg shadow-md w-80")
        h2(class="text-2xl font-semibold text-gray-800 mb-6") Books
        table(class="table-auto w-full")
          thead
            tr
              th(class="px-4 py-2") Title
              th(class="px-4 py-2") Author
              th(class="px-4 py-2") Year
          tbody
            each book in books
              tr
                td(class="px-4 py-2")= book.title
                td(class="px-4 py-2")= book.author
                td(class="px-4 py-2")= book.year
