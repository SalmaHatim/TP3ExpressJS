html
  head
    title Authentication Example
  body
    block content
    h1 Registration
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css")
    div(class="min-h-screen flex items-center justify-center bg-gray-200")
      div(class="bg-white p-8 rounded-lg shadow-md w-80")
        h2(class="text-2xl font-semibold text-gray-800 mb-6") Register
        form(action="/register" method="post")
          div(class="mb-4")
            label(for="username" class="block text-gray-600 text-sm font-medium mb-2") Username
            input(id="username" name="username" type="text" class="w-full p-2 rounded-md border border-gray-300 focus:outline-none focus:ring focus:ring-indigo-200")
          div(class="mb-4")
            label(for="password" class="block text-gray-600 text-sm font-medium mb-2") Password
            input(id="password" name="password" type="password" class="w-full p-2 rounded-md border border-gray-300 focus:outline-none focus:ring focus:ring-indigo-200")
          button(type="submit" class="w-full p-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-700 transition duration-300") Register
